<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="32dp"
    android:gravity="center">


    <TextView
        android:id="@+id/cd_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:textColor="@color/color_text_primary_styled"
        android:textSize="30sp"
        android:text="@string/player_turn"/>


    <TextView
        android:id="@+id/cd_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cd_team_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:visibility="invisible"
        android:textColor="@color/color_text_primary_simple"
        android:textSize="18sp"
        android:text="@string/prepare_time"/>

    <Button
        android:id="@+id/cd_ready_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cd_time"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:textColor="@color/color_text_primary_styled"
        android:textSize="21sp"
        android:text="Ready!"/>

</RelativeLayout>