<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="20dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/timer_progress"
        android:id="@+id/text_team"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/timer_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_marginRight="8dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/timer"
            android:background="@drawable/timer_background"
            android:max="100"
            android:progress="0"
            style="?android:attr/progressBarStyleHorizontal"/>
        <TextView
            android:id="@+id/timer_text"
            android:layout_marginLeft="8dp"
            android:text="1:00"
            android:textColor="@color/timer"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    <TextView
        android:textColor="#e74c3c"
        android:visibility="gone"
        android:id="@+id/game_over"
        android:text="Игра закончена"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:id="@+id/word"
        android:text="Слово"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:textColor="#0000ff"
        android:background="#ffffff"
        android:id="@+id/next_team"
        android:visibility="gone"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:textColor="#ffffff"
            android:background="@drawable/false_button"
            android:src="@drawable/x_red"
            android:scaleType="centerInside"
            android:id="@+id/word_niok"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="35dp"/>
        <ImageButton
            android:textColor="#ffffff"
            android:background="@drawable/true_button"
            android:src="@drawable/v_green"
            android:id="@+id/word_ok"
            android:layout_width="65dp"
            android:layout_marginLeft="35dp"
            android:layout_height="65dp" />
    </LinearLayout>

</RelativeLayout>