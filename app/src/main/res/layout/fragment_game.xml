<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="20dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/text_team"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="70dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/prc_timer_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:layout_marginRight="8dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/timer"
            android:background="@drawable/timer_background"
            android:max="100"
            android:progress="0"
            style="?android:attr/progressBarStyleHorizontal"/>
        <TextView
            android:id="@+id/prc_timer_text"
            android:layout_marginLeft="8dp"
            android:text="1:00"
            android:textColor="@color/timer"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    <TextView
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:id="@+id/word"
        android:text="Слово"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/list"
        android:layout_above="@+id/round_status_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <Button
        android:textColor="@color/text_color"
        android:background="#00000000"
        android:id="@+id/round_status_button"
        android:text="@string/play_round"
        android:textSize="20sp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/round_status"
        android:text="Играет"
        android:textSize="16sp"
        android:layout_below="@+id/round_status_button"
        android:layout_marginTop="-35dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="90dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:textColor="#ffffff"
            android:background="@drawable/false_button"
            android:src="@drawable/x_selector"
            android:scaleType="centerInside"
            android:id="@+id/prc_wrong"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginRight="35dp"/>
        <ImageButton
            android:textColor="#ffffff"
            android:background="@drawable/true_button"
            android:src="@drawable/v_selector"
            android:id="@+id/prc_correct"
            android:layout_width="65dp"
            android:layout_marginLeft="35dp"
            android:layout_height="65dp" />
    </LinearLayout>

</RelativeLayout>