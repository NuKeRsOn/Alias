<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="20dp"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/timer"
        android:id="@+id/text_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/timer"
        android:text="Осталось 30 секунд"
        android:layout_marginBottom="50dp"
        android:layout_centerInParent="true"
        android:layout_above="@+id/word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:visibility="gone"
        android:id="@+id/game_over"
        android:text="Игра закончена"
        android:textSize="35sp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_centerInParent="true"
        android:textSize="50sp"
        android:id="@+id/word"
        android:text="Word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/next_team"
        android:visibility="gone"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Ход другой команды"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/buttons_holder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:text="Не угадал"
            android:id="@+id/word_ok"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <Button
            android:text="Угадал"
            android:id="@+id/word_niok"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </LinearLayout>
</RelativeLayout>